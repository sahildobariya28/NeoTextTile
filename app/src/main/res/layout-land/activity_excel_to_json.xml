<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.ui.activity.ExcelToJson">

        <include
            android:id="@+id/include"
            layout="@layout/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp">

            <LinearLayout
                android:id="@+id/btn_import"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:layout_weight="1"
                android:background="@drawable/light_btn_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_excel_to_fire"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_design_master" />

                <TextView
                    android:id="@+id/text_exel_to_fire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lines="2"
                    android:text="Import"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_export"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:layout_weight="1"
                android:background="@drawable/light_btn_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_fire_to_excel"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_design_master" />

                <TextView
                    android:id="@+id/text_fire_to_excel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lines="2"
                    android:text="Export"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>