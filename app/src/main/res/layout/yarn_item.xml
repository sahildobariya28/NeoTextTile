<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/view_main"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/view_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_fav"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:paddingVertical="10dp"
                android:paddingHorizontal="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/un_fav"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edit_company_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bg_white"
                android:fontFamily="@font/medium"
                android:hint="Enter Name"
                android:layout_marginRight="5dp"
                android:inputType="textCapCharacters"
                android:includeFontPadding="false"
                android:paddingHorizontal="15dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/white_text_light"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edit_company_shade_no"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bg_white"
                android:fontFamily="@font/medium"
                android:hint="Enter Shade No"
                android:inputType="textCapCharacters"
                android:includeFontPadding="false"
                android:paddingHorizontal="15dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/white_text_light"
                android:textSize="12sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/addImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@color/btn_color"
            android:src="@drawable/ic_baseline_add_24"
            android:layout_gravity="center"
            android:visibility="visible" />


    </LinearLayout>
</layout>