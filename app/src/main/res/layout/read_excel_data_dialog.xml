<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/img_main"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleY="1.2"
                android:scaleX="1.2"
                android:adjustViewBounds="true"
                android:src="@drawable/exportexcel" />


            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Import Firebase ?"
                android:textColor="@color/text_title_color"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Are you sure!\nYou want to import the data\nfrom excel to firebase ? "
                android:textSize="14sp" />


            <LinearLayout
                android:id="@+id/view_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/medium"
                    android:includeFontPadding="false"
                    android:text="File Name"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edit_file_name"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/edit_bg_white"
                    android:fontFamily="@font/medium"
                    android:hint="Enter File Name"
                    android:includeFontPadding="false"
                    android:inputType="textCapCharacters"
                    android:paddingHorizontal="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white_text_light"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_no"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="50dp">

                    <TextView
                        android:id="@+id/text_no"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="#F15249"
                        android:fontFamily="@font/medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:padding="12dp"
                        android:text="No"
                        android:textColor="@color/white" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="50dp">

                    <TextView
                        android:id="@+id/text_yes"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="#32BA7C"
                        android:fontFamily="@font/medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:padding="12dp"
                        android:text="Yes"
                        android:textColor="@color/white" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>