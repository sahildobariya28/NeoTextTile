<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/view_main"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp">

        <LinearLayout
            android:id="@+id/view_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_sub_char"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:background="@drawable/edit_bg_white"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="A"
                android:layout_marginRight="5dp"
                android:textColor="@color/white_text_light"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/text_shade_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@drawable/edit_bg_white"
                android:fontFamily="@font/medium"
                android:hint="Enter Shade Number"
                android:includeFontPadding="false"
                android:inputType="textCapCharacters"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/white_text_light"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_qty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_bg_white"
                android:fontFamily="@font/medium"
                android:hint="Enter Qty"
                android:includeFontPadding="false"
                android:inputType="numberDecimal"
                android:digits="0123456789"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/white_text_light"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:background="@drawable/edit_bg_white"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp"
                android:src="@drawable/close"
                android:visibility="visible"
                app:tint="@color/white_text_light" />

        </LinearLayout>


        <ImageView
            android:id="@+id/addImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/btn_bg"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_add_24"
            android:visibility="visible" />

    </LinearLayout>
</layout>